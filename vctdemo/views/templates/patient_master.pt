<div id="patient" class="ui-widget ui-widget-header">
          <div id= "patient_ID">
              Patient= 
              <span style="font-weight: bold;" tal:content="python:patient.name"/>
              <span style="font-weight: bold;" tal:content="python:patient.firstname"/>, 
              <span style="font-weight: bold;" tal:content="python:patient.birthdate"/>, 
              <span style="font-weight: bold;" tal:content="python:patient.sex"/>
              , address: ....
          </div>         
          <div id="patient_menu" class="ui-widget-header">
                     <a href="${patient_url}list" tip="oooooooo " class="ui-state-default ui-corner-all">List all Items</a>
                     <a href="${patient_url}search" class="ui-state-default ui-corner-all">Search items</a>
                     <a href="${patient_url}list?type=issue" class="ui-state-default ui-corner-all">Issues</a>
                     <a href="${patient_url}list?type=observation" class="ui-state-default ui-corner-all">Observations</a>
                     <a href="${patient_url}list?type=action" class="ui-state-default ui-corner-all">Actions</a>
                     <a href="${patient_url}list_care_contacts" class="ui-state-default ui-corner-all">Care Contacts</a>
                     <a href="${patient_url}list_topics" class="ui-state-default ui-corner-all">Topics</a>
                     <a href="${patient_url}list_care_plan" class="ui-state-default ui-corner-all">Care Plan</a>
                     <a href="${patient_url}list_care_team" class="ui-state-default ui-corner-all">Care Team</a>
                     <a href="${patient_url}#" class="ui-state-default ui-corner-all">Other Views</a>
                     <a href="${patient_url}add" class="ui-state-default ui-corner-all">Add item</a>
                     <a href="${patient_url}add?type=Action" class="ui-state-default ui-corner-all">Add action</a>
                     <a href="${patient_url}add?type=Observation" class="ui-state-default ui-corner-all">Add observation</a>
                     <a href="${patient_url}add?type=Issue" class="ui-state-default ui-corner-all">Add issue</a>
                     <a href="${patient_url}#" class="ui-state-default ui-corner-all">Add link</a>
                     <a href="${patient_url}edit" class="ui-state-default ui-corner-all">Administration</a>
                     <a href="${patient_url}.." class="ui-state-default ui-corner-all">Close Patient</a>
          </div>
</div>

<div id="content" class="ui-widget ui-widget-content">
<metal:block define-slot="patient_content">
patient data
</metal:block>
</div>

</div>
</div>

